%h1 Current Items
= link_to 'New Item', new_item_path
%table
  %tr
    %th Item
    %th Category
    %th{:colspan => "3"}
  - @items.each do |item|
    %tr
      %td= item.itemName
      %td= item.category
      %td= link_to 'Show', item_path(item)
      %td= link_to 'Edit', edit_item_path(item)
      %td= link_to 'Delete', item_path(item), method: :delete, |
          data: { confirm: 'Are you sure you want to delete this item? ' }