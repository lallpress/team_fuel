%h1 Current Organizations
= link_to 'New Organization', new_organization_path
%table#organizations
    %tr
        %th Organization Name
        %th Address
        %th Phone
        %th Contact
        %th{:colspan => "3"}
    - @organizations.each do |org|
        %tr
            %td= org.org_name
            %td= org.address
            %td= org.phone
            %td= org.contact_id
            %td= link_to 'Show', organization_path(org)
            %td= link_to 'Edit', edit_organization_path(org)
            %td= link_to 'Delete', organization_path(org), method: :delete, |
                data: { confirm: 'Are you sure you want to delete this organization?' }